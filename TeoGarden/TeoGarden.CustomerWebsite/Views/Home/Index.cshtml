<!-- Categories -->
    <div class="wrapper pt-3" style="background-color: var(--body)!important;">
        <div class="container d-flex flex-column align-items-center">
            <h3 class="sub-title">Sản Phẩm</h2>
            <h2 class="title">CÁC LOẠI SẢN PHẨM CỦA TÈO</h2>
            <div class="cate-content container categories">
                @foreach (var item in Model.Categories)
                {
                   <a asp-controller="products" asp-action="category" asp-route-Id="@item.Id">
                        <div class="cate-item">
                            <img class="item-img" src="@item.Image" alt="">
                            <h5 class="item-name">@item.Name.ToString().ToUpper()</h5>
                            <p class="item-des">Các loại @item.Name.ToString().ToLower() tươi</p>
                        </div>
                    </a> 
                }
            </div>
        </div>
    </div>
<!-- End categories -->

@* Guarranty *@
<div class="wrapper guarantee">
    <h3 class="sub-title text-center" style="color: var(--green)">Cam Kết</h2>
    <h2 class="title text-center" style="color: #fff">CAM KẾT CỦA NHÀ TÈO</h2>
